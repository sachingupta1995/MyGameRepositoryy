<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rel_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.accolite.quizapp.MainActivity">


    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="6">

        <TextView
            android:id="@+id/question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textStyle="bold"
            android:fontFamily="@string/font_type_1"
            android:textColor="#000000"
            android:textSize="@dimen/text_size_1" />

        <LinearLayout
            android:layout_marginTop="@dimen/margin_top_1"
            android:id="@+id/l2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/l3"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:weightSum="2">

                <LinearLayout
                    android:id="@+id/l4"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="2">


                    <Button

                        android:paddingLeft="0dp"
                        android:paddingRight="0dp"
                        android:id="@+id/option1"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dimen_150"
                        android:layout_weight="1" />

                    <Button

                        android:paddingLeft="0dp"
                        android:paddingRight="0dp"
                        android:id="@+id/option2"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dimen_150"
                        android:layout_marginLeft="@dimen/dimen_5"
                        android:layout_weight="1" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/l5"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <Button

                        android:id="@+id/option3"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dimen_150"
                        android:layout_marginTop="@dimen/dimen_5"
                        android:paddingLeft="0dp"
                        android:paddingRight="0dp"
                        android:layout_weight="1"
                        android:text=""/>

                    <Button

                        android:id="@+id/option4"
                        android:layout_marginLeft="@dimen/dimen_5"
                        android:layout_marginTop="@dimen/dimen_5"
                        android:paddingLeft="0dp"
                        android:paddingRight="0dp"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dimen_150"
                        android:layout_weight="1" />


                </LinearLayout>


            </LinearLayout>

            <Button
                android:layout_marginTop="@dimen/margin_top_1"
                android:id="@+id/next_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/move_to_next" />
        </LinearLayout>


    </LinearLayout>


    <TextView
        android:id="@+id/countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textColor="#000000" />


    <TextView
        android:id="@+id/my_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text=""
        android:textColor="#000000" />

    <TextView
        android:id="@+id/opponent_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#000000"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        />

</RelativeLayout>